<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context="org.grupo1.nfc_access.SplashActivity">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/key_img"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/key_anim"
            android:layout_above="@+id/nfc_img"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/nfc_img"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/nfc_anim"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/open_img"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/open_anim"
            android:layout_centerInParent="true"/>

</RelativeLayout>
